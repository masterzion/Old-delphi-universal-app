\par
\par
\plain
\f7
\fs20
\cf1
\b
CREATE PROCEDURE GET_EMP_PROJ (\par
      EMP_NO SMALLINT\par
) \par
\par
RETURNS (\par
         PROJ_ID VARCHAR(20)\par
 ) AS \par
\par
BEGIN \par
   FOR \par
     SELECT \par
        PROJ_ID \par
     FROM \par
        EMPLOYEE_PROJECT \par
     WHERE \par
         EMP_NO = :emp_no \par
      INTO \par
         :proj_id \par
   DO \par
     SUSPEND; \par
END!! \plain
\f6
\fs24
\b
\par
\plain
\f3
\fs20
\cf1
\par
